<form action="/robots/<%= @specific_robot.id %>" method="post">
  <input type="hidden" name="_method" value="PUT">
  <input type="text" name="name" value="<%= @specific_robot.name %>">
  <input type="text" name="angry" value="<%= @specific_robot.angry %>">
  <input type="text" name="power" value="<%= @specific_robot.power %>">
  <button type="submit" style="width:100px;height:100px">
</form>

